[color]
  ui = true
[user]
  name = Amir Kadivar
  email = amir@amirkdv.ca
[push]
  default = upstream
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[alias]
  ls = ls-files
  l  = log --pretty=oneline --decorate
  lp = log --patch --decorate
  sh = show --name-status
  st = status -uno
  co = checkout
  b  = branch -vv
  ba = branch -a -vv
  ap = add --patch
  ci = commit -v
  d  = diff
  dc = diff --cached
  di = diff --no-index
  g  = log --graph --abbrev-commit --decorate --format=format:'%C(blue)%h%C(reset)\t%C(bold green)(%aI)%C(reset)%C(yellow)%d%C(reset) %s'
