[color]
  ui = true
[user]
  name = Amir Kadivar
  email = amir@amirkdv.ca
[push]
  default = upstream
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[alias]
  ls = ls-files
  l  = log --pretty=oneline --decorate
  lf = log --follow
  lp = log --patch --decorate
  sh = show --name-status
  st = status -uno
  co = checkout
  b  = branch -a
  bm = branch --merged # lists "merged" branches -- **CAUTION**: includes master
  aa = add --all
  ap = add --patch
  ci = commit -v
  d  = diff
  dc = diff --cached
  di = diff --no-index
  r  = remote -v
  rp = remote prune # usage: git rp origin
  f  = fetch
