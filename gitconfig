[alias]
  ls = ls-files
  l  = log --pretty=oneline --decorate
  lp = log --patch --decorate
  st = status
  co = checkout
  b  = branch -a
  aa = add --all
  ap = add --patch
  ci = commit -v
  d  = diff
  dc = diff --cached
  di = diff --no-index
